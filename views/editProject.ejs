<%- include('partials/navbar', { page: '' }) %>

<div class="container mx-auto p-6">
  <h1 class="text-3xl font-bold mb-4">Edit Project â€“ <%= project.title %></h1>

  <form action="/solutions/editProject" method="POST" class="space-y-4">

    <input type="hidden" name="id" value="<%= project.id %>">

    <input type="text" name="title" value="<%= project.title %>" required class="input input-bordered w-full" />
    <input type="url" name="feature_img_url" value="<%= project.feature_img_url %>" required class="input input-bordered w-full" />

    <select name="sector_id" required class="select select-bordered w-full">
      <% sectors.forEach(sector => { %>
        <option value="<%= sector.id %>" <%= (project.sector_id == sector.id) ? "selected" : "" %>><%= sector.sector_name %></option>
      <% }) %>
    </select>

    <textarea name="intro_short" required class="textarea textarea-bordered w-full"><%= project.intro_short %></textarea>
    <textarea name="summary_short" required class="textarea textarea-bordered w-full"><%= project.summary_short %></textarea>
    <textarea name="impact" required class="textarea textarea-bordered w-full"><%= project.impact %></textarea>
    <input type="url" name="original_source_url" value="<%= project.original_source_url %>" required class="input input-bordered w-full" />

    <button type="submit" class="btn btn-success">Update Project</button>
    <a href="/solutions/deleteProject/<%= project.id %>" class="btn btn-error ml-2">Delete Project</a>
  </form>
</div>
